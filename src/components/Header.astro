---
import ContactBar from './ContactBar.astro';
import MobileMenuButton from './MobileMenuButton.astro';
import Nav from './Nav.astro';

const { title } = Astro.props;
---

<header>
	<h1 class='hide-mobile'><em>Connor's Custom Plumbing</em></h1>
	<div class='logo'>CCM</div>
	<Nav title={title} />
	<div id='contact-bar'>
		<ContactBar />
		<MobileMenuButton />
	</div>
</header>

<style>
	header {
		min-width: 100%;

		border-bottom: 4px solid rgb(var(--accent));
		box-shadow: rgba(0, 0, 0, 0.16) 0px 10px 36px 0px,
			rgba(0, 0, 0, 0.06) 0px 0px 0px 1px;
		background: var(--accent-gradient);

		width: 100%;

		display: grid;
		grid-template-columns: auto 1fr auto;
		grid-template-rows: auto auto;
		align-items: center;
	}

	#contact-bar {
		grid-column: 3/4;
		grid-row: 1/2;

		display: flex;
		flex-direction: row;
		padding-right: 1rem;
	}

	h1 {
		grid-column: 2/3;
		grid-row: 1/2;

		font-family: 'Comfortaa', sans-serif;
		font-size: 2rem;
		color: rgb(var(--copper-accent));
		font-weight: 600;
		padding-left: 1rem;
	}

	div.logo {
		padding: 0.5rem;
		grid-column: 1/2;
		grid-row: 1/2;

		color: rgb(var(--copper-accent));
		font-size: 2rem;
		font-weight: 900;
		font-family: 'Comfortaa', sans-serif;
	}

	@media only screen and (max-width: 768px) {
		div.hide-mobile {
			display: none;
		}
	}

	@media only screen and (max-width: 1100px) {
		h1 {
			font-size: 1.55rem;
		}
	}
	@media only screen and (max-width: 768px) {
		h1 {
			font-size: 1rem;
		}

		header {
			background: none;
			background-color: rgb(var(--background));
		}
	}

	@media only screen and (max-width: 576px) {
		h1 {
			font-size: 2rem;
		}

		h1.hide-mobile {
			display: none;
		}

		div.hide-mobile {
			display: block;
		}
	}
</style>
